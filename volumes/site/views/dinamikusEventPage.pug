doctype html
html(lang="hu")
	head
		title 3hétGaléria
		link(href='/css/main.css', rel='stylesheet')
		//- link(href='../../css/event.css', rel='stylesheet')
		meta(charset='utf-8')
	body
		include nav.pug
		//- csangoborokazasborokaval
		img(src=`/exibs/${event.coverImageSrc}`).eventCover
		main
			h4 #{event.artist} - 
			h4 #{event.title}
			p #{event.date}
			.tags
				each tag in event.tags
					p #{tag}
			p #{event.description}
			.galeri
				each i in Array.from(Array(event.numImages).keys())
					- const imageName = ('0' + (i + 1)).slice(-2) + '.png'
					img(src=`/exibs/${event.galleryPath}/${imageName}`)